	<script>
	var japan_tee=[3,"XS",4,"S",5,"M",4,"L",2,"XL"];

	 function function_max(){
	 	var waarde_selector;
	 	var max_aantal;

	 	waarde_selector = document.getElementsByClassName("single-option-selector").value;

	 	if (waarde_selector=="XS") {
	      max_aantal = japan_tee[0];
	 	}
	 	if (waarde_selector=="S") {
	      max_aantal = japan_tee[0];
	 	}
	 	if (waarde_selector=="M") {
	      max_aantal = japan_tee[0];
	 	}
	 	if (waarde_selector=="L") {
	      max_aantal = japan_tee[0];
	 	}
	 	if (waarde_selector=="XL") {
	      max_aantal = japan_tee[0];
	 	}
	 	document.getElementsById("aantal").max = max_aantal;
	 }
</script>
